@model Assignment1.Areas.Identity.Data.Assignment1User

@{
    ViewData["Title"] = "Delete";
}
@if (User.IsInRole("Admin"))
{
    <h2>Delete User Confirmation</h2>

    <h3>Are you sure you want to delete this User?</h3>
    <div>
        <hr />

        <div class="container centerText">
            @if (Model.Email == "a@a.a")
            {
                <div class="row">
                    <div class="col-lg-12">
                        <h1>You can't delete the primary admin account!!!!!</h1>
                    </div>
                </div>
                <div class="row">
                    <a asp-action="Index">Back to List</a>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-6">
                        <h3>@Html.DisplayNameFor(model => model.Id): @Html.DisplayFor(model => model.Id)</h3>
                        <h3>@Html.DisplayNameFor(model => model.UserName): @Html.DisplayFor(model => model.UserName)</h3>
                        <h3>@Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)</h3>
                    </div>
                    <div class="col-lg-3"></div>
                </div>
                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-6">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-default" /> |
                            <a asp-action="Index">Back to List</a>
                        </form>
                    </div>
                    <div class="col-lg-3"></div>
                </div>
            }
        </div>
    </div>
}