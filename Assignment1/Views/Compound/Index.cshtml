@using Microsoft.AspNetCore.Identity
@using Assignment1.Areas.Identity.Data

@inject SignInManager<Assignment1User> SignInManager
@inject UserManager<Assignment1User> UserManager
@{
    ViewData["Title"] = "Compound Interest";
}
@if (SignInManager.IsSignedIn(User))
{
    @if(User.IsInRole("Admin") || User.IsInRole("Member"))
    {
    <h2>Compound Interest Calculator</h2>
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <form action="Compound/CalculateCompoundValue" method="post">
                    <fieldset>
                        <div>
                            <label for="Principal">Principal: </label>
                            <input type="number" step="0.01" name="Principal" value="" />
                        </div>
                        <div>
                            <label for="Rate">Rate: </label>
                            <input type="number" step="0.01" name="Rate" value="" />
                        </div>
                        <div>
                            <label for="Number">Number of Times: </label>
                            <input type="number" step="0.01" name="Number" value="" />
                        </div>
                        <div>
                            <label for="Time">Time:</label>
                            <input type="number" step="0.01" name="Time" value="" />
                        </div>
                        <div>
                            <label>&nbsp;</label>
                            <input type="submit" value="Calculate" class="submit" />
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="col-sm-6">
                <img class="img-responsive" src="https://www.thecalculatorsite.com/images/compound-interest-formula-diagram.png" />
            </div>
        </div>
    </div>
    }
}

